<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- BOXICONS -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>

    <title>BAKLOG-Y&V</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class='bx bx-home-circle bx-md bx-flashing' animation='flashing'></i>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">EMPLEADOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">PROYECTOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">DISTRIBUCION</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">STAFFING</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">RECURSOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">NOMINA</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">BACKLOG</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <a href="/create" class="btn btn-outline-secondary mt-4"><i class='bx bxs-user-plus bx-md'></i></a>
    </div>

    <table class="table table-hover text-center mt-4">
        <thead>
            <tr class="text-white-50 bg-dark">
                <th scope="col">#</th>
                <th scope="col">Tipo</th>
                <th scope="col">Documento</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Gerencia</th>
                <th scope="col">Departamento</th>
                <th scope="col">Cargo</th>
                <th scope="col">salario</th>
                <th scope="col">Accion</th>
            </tr>
        </thead>
        <tbody>
            <% results.forEach((usuario)=> { %>
                <tr>
                    <td>
                        <%=usuario.id %>
                    </td>
                    <td>
                        <%=usuario.documentos_id%>
                    </td>
                    <td>
                        <%=usuario.documento%>
                    </td>
                    <td>
                        <%=usuario.nombre%>
                    </td>
                    <td>
                        <%=usuario.apellido%>
                    </td>
                    <td>
                        <%=usuario.gerencias_id%>
                    </td>
                    <td>
                        <%=usuario.departamentos_id%>
                    </td>
                    <td>
                        <%=usuario.cargos_id%>
                    </td>
                    <td>
                        <%=usuario.sueldo%>
                    </td>
                    <td>
                        <a href="/edit" class="btn btn-outline-info"><i class='bx bx-edit-alt bx-sm'></i></a>
                        <a href="/delete" class="btn btn-outline-danger"><i class='bx bxs-trash bx-sm'></i></a>
                    </td>
                </tr>
                <% }) %>

        </tbody>
    </table>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>